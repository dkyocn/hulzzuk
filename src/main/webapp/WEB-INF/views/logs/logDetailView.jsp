//ÎåÄÎåìÍ∏ÄÏûÖÎ†• 
$(document).on("click", ".reply-insert-btn", function () {
    const commentId = $(this).data("comment-id");
    const replyContent = $(this).siblings(".reply-content").val();

    if (!replyContent.trim()) {
        alert("ÎãµÍ∏ÄÏùÑ ÏûÖÎ†•ÌïòÏÑ∏Ïöî.");
        return;
    }

    $.ajax({
        url: "/hulzzuk/log/comment/replyInsert.do",
        type: "POST",
        contentType: "application/json",
        data: JSON.stringify({
            commentId: commentId,
            content: replyContent
        }),
        success: function (res) {
            if (res.success) {
                alert("ÎãµÍ∏ÄÏù¥ Îì±Î°ùÎêòÏóàÏäµÎãàÎã§.");
                location.reload();
            } else {
                alert(res.message);
                if (res.redirect) {
                    window.location.href = res.redirect;
                }
            }
        },
        error: function () {
            alert("ÎãµÍ∏Ä Îì±Î°ù Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.");
        }
